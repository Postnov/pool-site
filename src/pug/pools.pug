doctype html
html(lang="ru")
	include partails/head.pug
	body
		include partails/variables.pug
		include partails/header.pug


		.page
			.page__content.water-gray-bg

				//START GREETING
				section.greeting.greeting--saunas(style="background-image: url('images/pools-bg.jpg');")
					h1.greeting__title Бассейны
				//END GREETING

				//START SERVICES
				section.services.services--pools
					.services__container.container
						.services__header
							h2.services__title.headline.headline--sm Услуги
							h3.services__subtitle.headline Строительство саун под ключ, применение последних технологий

						ul.services__list.services-grid
							each item, index in servicesSaunas
								li.services-grid__item
									img.services-grid__img(src="images/service-item-"+index+".jpg", alt="")
									.services-grid__content
										p.services-grid__title=item.title
										p.services-grid__descr=item.descr
				//END SERVICES

		include partails/footer.pug
